<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My SMS Notifications</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="my_sms_notifications" template="Linkmobility_Notifications::customer/config.phtml">
                <block class="Magento\Framework\View\Element\Template" name="my_sms_notifications_orders" as="sms.section.orders" template="Linkmobility_Notifications::customer/section/orders.phtml" />
            </block>
        </referenceContainer>
    </body>
</page>