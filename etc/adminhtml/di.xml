<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Linkmobility\Notifications\Controller\Adminhtml\Subscription\Create">
        <arguments>
            <argument name="logger" xsi:type="object">Linkmobility\Notifications\Logger\Logger</argument>
        </arguments>
    </type>
    <type name="Linkmobility\Notifications\Controller\Adminhtml\Subscription\Delete">
        <arguments>
            <argument name="logger" xsi:type="object">Linkmobility\Notifications\Logger\Logger</argument>
        </arguments>
    </type>
    <type name="Linkmobility\Notifications\Controller\Adminhtml\Subscription\MassCreate">
        <arguments>
            <argument name="logger" xsi:type="object">Linkmobility\Notifications\Logger\Logger</argument>
        </arguments>
    </type>
    <type name="Linkmobility\Notifications\Controller\Adminhtml\Subscription\MassDelete">
        <arguments>
            <argument name="logger" xsi:type="object">Linkmobility\Notifications\Logger\Logger</argument>
        </arguments>
    </type>
    <type name="Magento\Ui\Component\MassAction\Filter">
        <plugin name="smsTypeFilter" type="Linkmobility\Notifications\Plugin\Component\MassAction\FilterPlugin"/>
    </type>
</config>